{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "env.d.ts",
    "vite.config.*",
    "vitest.config.*",
    // "cypress.config.*",
    // "nightwatch.conf.*",
    // "playwright.config.*"
    "electron.vite.config.*",
    "src/main/**/*"
    // "src/preload/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node" /*  "electron-vite/node" */]
  }
}
