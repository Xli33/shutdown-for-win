{
  "name": "shutdown-for-win",
  "version": "0.0.1",
  "description": "shutdown for win",
  "private": true,
  "type": "module",
  "main": "./out/main/index.js",
  "scripts": {
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run type-check && electron-vite build",
    "prepare": "husky",
    "release": "commit-and-tag-version",
    "vite-build": "run-p type-check \"build-only {@}\" --",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Xli33/shutdown-for-win.git"
  },
  "author": "Xli33",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Xli33/shutdown-for-win/issues"
  },
  "homepage": "https://github.com/Xli33/shutdown-for-win#readme",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "pinia": "^2.3.1",
    "quasar": "^2.17.7",
    "utils-where": "^0.3.0",
    "vue": "^3.5.12",
    "vue-i18n": "11.0.1",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/adm-zip": "^0.5.7",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.10.7",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vitejs/plugin-vue-jsx": "^4.0.1",
    "@vitest/eslint-plugin": "1.1.25",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.3.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "@yellowspot/vite-plugin-externals": "^0.4.0",
    "commit-and-tag-version": "^12.5.0",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "eslint": "^9.18.0",
    "eslint-plugin-vue": "^9.30.0",
    "husky": "^9.1.6",
    "jsdom": "^26.0.0",
    "less": "^4.2.2",
    "npm-run-all2": "^7.0.1",
    "prettier": "^3.3.3",
    "typescript": "~5.7.3",
    "vite": "^6.0.10",
    "vite-plugin-htmlx": "^1.0.5",
    "vite-plugin-vue-devtools": "^7.7.0",
    "vitest": "^3.0.2",
    "vue-tsc": "^2.2.0"
  }
}
