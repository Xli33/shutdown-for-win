{
  "name": "shutdown-for-win",
  "version": "0.0.3",
  "description": "shutdown for win",
  "private": true,
  "type": "module",
  "main": "./out/main/index.js",
  "scripts": {
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run type-check && electron-vite build",
    "prepare": "husky",
    "release": "commit-and-tag-version",
    "vite-build": "run-p type-check \"build-only {@}\" --",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Xli33/shutdown-for-win.git"
  },
  "author": "Xli33",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Xli33/shutdown-for-win/issues"
  },
  "homepage": "https://github.com/Xli33/shutdown-for-win#readme",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "pinia": "^3.0.3",
    "quasar": "^2.18.1",
    "utils-where": "^0.3.0",
    "vue": "^3.5.17",
    "vue-i18n": "11.1.8",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@tsconfig/node22": "^22.0.2",
    "@types/adm-zip": "^0.5.7",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.10",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitejs/plugin-vue-jsx": "^5.0.1",
    "@vitest/eslint-plugin": "1.3.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "@yellowspot/vite-plugin-externals": "^0.4.0",
    "commit-and-tag-version": "^12.5.1",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "4.0.0-beta.0",
    "eslint": "^9.30.1",
    "eslint-plugin-vue": "^10.3.0",
    "husky": "^9.1.6",
    "jsdom": "^26.1.0",
    "less": "^4.3.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "vite": "^7.0.0",
    "vite-plugin-htmlx": "^1.0.5",
    "vite-plugin-vue-devtools": "^7.7.7",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.1"
  }
